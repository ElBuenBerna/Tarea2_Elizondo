<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.iteso.tarea2_elizondo.ActivityMain">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/activity_main_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bicycle"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#c0c0c0"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:id="@+id/activity_main_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold"/>
                <ImageButton
                    android:id="@+id/activity_main_like"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/like"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/activity_main_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_below="@id/activity_main_title"
                    android:text="@string/color"
                    android:layout_alignParentLeft="true"
                    android:textSize="15dp"
                    android:textStyle="bold"/>
                <RadioGroup
                    android:id="@+id/activity_main_rgrb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_below="@id/activity_main_color"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/activity_main_rb1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/gray"
                        android:backgroundTint="@color/gray"
                        android:paddingRight="5dp"/>
                    <RadioButton
                        android:id="@+id/activity_main_rb2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/brown"
                        android:backgroundTint="@color/brown"

                        android:paddingRight="5dp"/>
                    <RadioButton
                        android:id="@+id/activity_main_rb3"
                        android:layout_width="wrap_content"
                        android:backgroundTint="@color/pink"
                        android:buttonTint="@color/pink"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"/>
                    <RadioButton
                        android:id="@+id/activity_main_rb4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"
                        android:backgroundTint="@color/black"/>
                </RadioGroup>
                <RadioGroup
                    android:id="@+id/activity_main_rgb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_below="@id/activity_main_rgrb"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/activity_main_small"
                        android:layout_width="53dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_sizes"
                        android:shadowColor="@color/colorPrimary"

                        android:layout_marginRight="5dp"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/size_s" />
                    <Button
                        android:id="@+id/activity_main_medium"
                        android:layout_width="53dp"
                        android:layout_height="wrap_content"
                        android:text="@string/size_m"
                        android:background="@drawable/button_sizes"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/colorPrimary"
                        android:paddingRight="5dp"/>
                    <Button
                        android:id="@+id/activity_main_large"
                        android:layout_width="53dp"
                        android:layout_height="wrap_content"
                        android:text="@string/size_l"
                        android:background="@drawable/button_sizes"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/colorPrimary"
                        android:paddingRight="5dp"/>
                    <Button
                        android:id="@+id/activity_main_elarge"
                        android:layout_width="53dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_sizes"
                        android:text="@string/size_xl"
                        android:textColor="@color/colorPrimary"
                        android:paddingRight="5dp"/>

                </RadioGroup>

                <TextView
                    android:paddingTop="5dp"
                    android:id="@+id/activity_main_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_main_rgb"
                    android:text="@string/description"
                    android:textColor="@color/black"
                    android:layout_alignParentLeft="true"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:paddingTop="5dp"
                    android:id="@+id/activity_main_description_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_main_description"
                    android:text="@string/description_text"
                    />

                <TextView
                    android:paddingTop="5dp"
                    android:id="@+id/activity_main_measurement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_main_description_text"
                    android:text="@string/measurement"
                    android:textColor="@color/black"
                    android:layout_alignParentLeft="true"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:paddingTop="5dp"
                    android:id="@+id/activity_main_measurement_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_main_measurement"
                    android:text="@string/measurement_text"
                    />

                <Button
                    android:id="@+id/activity_main_addToCart"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/activity_main_measurement_text"
                    android:text="@string/addToCart"
                    android:layout_marginBottom="5dp"/>

            </RelativeLayout>


        </LinearLayout>


    </ScrollView>




</LinearLayout>

